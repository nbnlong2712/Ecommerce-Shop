<!--Header -->
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h4>Product</h4>
        <a id="product" class="btn btn-outline-success" href="/admin/products/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"> Add Product</i>
        </a>
    </div>
    <!--Body -->
    <div>
        {{# if this.empty}}
        <div>
            <h4 class="ml-3 mt-3 mb-3">Data is empty!</h4>
        </div>
        {{else}}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" class="text-center">ProID</th>
                    <th scope="col" class="text-center">ProName</th>
                    <th scope="col" class="text-center">TinyDes</th>
                    <th scope="col" class="text-center">Price</th>
                    <th scope="col" class="text-center">Quantity</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each this.list}}
                <tr>
                    <th scope="col" class="text-center">{{ProID}}</th>
                    <td scope="col" class="text-center">{{ProName}}</td>
                    <td scope="col" class="text-center">{{TinyDes}}</td>
                    <td scope="col" class="text-center">{{Price}}</td>
                    <td scope="col" class="text-center">{{Quantity}}</td>
                    <td class="text-right text-center">
                        <a class="btn btn-danger" href="javascript:;" role="button"><i class="fa fa-trash"
                                aria-hidden="true"></i></a>
                        <a class="btn btn-primary" href="javascript:;" role="button"><i class="fa fa-edit"
                                aria-hidden="true"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/ if}}
    </div>
    <!--Footer -->
    <div class="card-footer text-muted">
        Footer
    </div>
</div>