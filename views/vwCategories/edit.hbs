<!--Header -->
<div class="card">
    <div class="card-header">
        <h4>Edit Category</h4>
    </div>
    <!--Body -->
    <!--Nếu action="" nghĩa là xử lý ngay tại trang /admin/categories/add-->
    <form class="mt-3 ml-5 mr-5 mb-4" method="POST">
        <div class="form-group">
            <label for="txtCatID">#</label>
            <input type="text" class="form-control" id="txtCatID" name="CatID" readonly value="{{this.category.CatID}}">
        </div>
        <div class="form-group">
            <label for="txtCatName">Category</label>
            <input type="text" class="form-control" id="txtCatName" name="CatName" autofocus
                value="{{this.category.CatName}}">
        </div>
        <div class="d-flex justify-content-between">
            <a class="btn btn-primary mt-2" href="/admin/categories" role="button" title="Back to Catogeries list">
                <i class="fa fa-backward" aria-hidden="true"> &nbsp;Back</i>
            </a>
            <button type="submit" class="btn btn-success mt-2" formaction="/admin/categories/update">
                <i class="fa fa-check" aria-hidden="true">
                    &nbsp;Save
                </i>
            </button>
            <button type="submit" class="btn btn-danger mt-2" formaction="/admin/categories/delete">
                <i class="fa fa-trash" aria-hidden="true">
                    &nbsp;Delete
                </i>
            </button>
        </div>
    </form>
    <!--Footer -->
    <div class="card-footer text-muted">
        Footer
    </div>
</div>