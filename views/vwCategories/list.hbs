<!--Header -->
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h4>Category</h4>
        <a id="category" class="btn btn-outline-success" href="/admin/categories/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"> Add Category</i>
        </a>
    </div>
    <!--Body -->
    <div>
        {{# if this.empty}}
        <div>
            <h4 class="ml-3 mt-3 mb-3">Data is empty!</h4>
        </div>
        {{else}}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" class="text-center">CatID</th>
                    <th scope="col" class="text-center">CatName</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each this.list}}
                <tr>
                    <th scope="col" class="text-center">{{CatID}}</th>
                    <td scope="col" class="text-center">{{CatName}}</td>
                    <td class="text-right text-center">
                        <a class="btn btn-danger" href="javascript:;" role="button" title="Delete"><i
                                class="fa fa-trash" aria-hidden="true"></i></a>
                        <a class="btn btn-primary" href="/admin/categories/edit?id={{CatID}}" role="button"
                            title="Edit"><i class="fa fa-edit" aria-hidden="true"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/ if}}
    </div>
    <!--Footer -->
    <div class="card-footer text-muted">
        Footer
    </div>
</div>